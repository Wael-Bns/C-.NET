@model Menu.Models.Dish;
@{
	ViewData["Title"] = "Details";
}
<div class="container">
	<div class="d-flex justify-content-center">
		<h3>@Model.Name</h3>
	</div>
	<div class="d-flex justify-content-center">
		<img src="@Model.ImageUrl" width="70%" />
	</div>
	<div class="d-flex justify-content-center">
		@Model.Price.ToString("N2") Dollars
	</div>
	<div class="d-flex justify-content-center"> 
		<b>Ingredients :</b>
		<ul>
		@foreach(var item in Model.DishIngredients){
			<li>
				@item.Ingredient.Name
			</li>
		}
		</ul>
	</div>
	<a class="btn btn-info d-flex justify-content-center" asp-action="Index">Back to the Menu</a>
</div>
